<div id="pins" class="transition-enabled">
  <h1>All Pins</h1>
  <% if user_signed_in? %>
  <%= link_to "New Pin", new_pin_path %>
  <% end %>
  <div class="container">
    <div class="row">
        <% @pins.each do |pin| %>
        <div class="box panel panel-default col-xs-12 col-sm-4">
          <%= link_to pin_path(pin) do %>
            <%= image_tag(pin.photo.to_s, alt: 'Image') if pin.photo? %>
            <div class="panel-body">
            <h2><%= pin.title %></h2>
            <% if user_signed_in %>
            <% end %>
            </div>
          <% end %>
      </div>
        <% end %>
    </div>
</div>
</div>

